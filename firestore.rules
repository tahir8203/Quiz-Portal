rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }
    function isTeacher() {
      return isSignedIn() && exists(/databases/$(database)/documents/teachers/$(request.auth.uid));
    }
    function isAdmin() {
      return isTeacher() && get(/databases/$(database)/documents/teachers/$(request.auth.uid)).data.role == "admin";
    }
    function isStudent() {
      return isSignedIn() && exists(/databases/$(database)/documents/students/$(request.auth.uid));
    }

    match /teachers/{teacherUid} {
      allow read: if request.auth.uid == teacherUid || isAdmin();
      allow write: if request.auth.uid == teacherUid || isAdmin();
    }

    match /students/{studentUid} {
      allow read, write: if request.auth.uid == studentUid;
    }

    match /classes/{classKey} {
      allow read: if isSignedIn();
      allow write: if isTeacher();
    }

    match /semesters/{semesterKey} {
      allow read: if isSignedIn();
      allow write: if isTeacher();
    }

    match /enrollments/{enrollmentKey} {
      allow read: if isSignedIn();
      allow write: if isTeacher();
    }

    match /quizzes/{quizKey} {
      allow read: if isTeacher() || resource.data.status == "published";
      allow write: if isTeacher();
    }

    match /quizAttempts/{attemptKey} {
      allow create: if isStudent() && request.resource.data.studentUid == request.auth.uid;
      allow read: if isTeacher() || (isStudent() && resource.data.studentUid == request.auth.uid);
      allow update: if isTeacher();
      allow delete: if false;
    }

    match /assignments/{assignmentKey} {
      allow read: if isSignedIn();
      allow write: if isTeacher();
    }

    match /submissions/{submissionKey} {
      allow create: if isStudent() && request.resource.data.studentUid == request.auth.uid;
      allow read: if isTeacher() || (isStudent() && resource.data.studentUid == request.auth.uid);
      allow delete: if isTeacher();
      allow update: if false;
    }

    match /quizProgress/{progressKey} {
      allow create, update: if isStudent() && request.resource.data.studentUid == request.auth.uid;
      allow read: if isTeacher() || (isStudent() && resource.data.studentUid == request.auth.uid);
      allow delete: if isStudent() || isTeacher();
    }

    match /mail/{mailId} {
      allow create: if isAdmin();
      allow read, update, delete: if false;
    }
  }
}
